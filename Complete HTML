    <h2>This is HTML forms tutorial</h2>
    <!-- sends all the form data to backend.php -->
    <form action="backend.php">

        <!-- helps you select the column you have chosen to write, here it'll be implemented on tag with name -->
        <label for="name">Name</label>

        <!-- use div for new line, avoid using br, div just divides do the in-line arrangement -->
        <div>
            <input type="text" name="name">
        </div>
        <!-- name gives you a way for backend to access this info -->
        <div>
            email: <input type="email" name ="myEmail">
        </div>
        <div>
            <input type="submit" value="Submit Now">
        </div>
        <div>
            Date: <input type="date" name="myDate">
        </div>
        <div>
            Are you eligible?: <input type="checkbox" name="myEligiblity">
        </div>
        <!-- to be able to select only one option out of all the options -->
        Gender: Male <input type="radio" name="myGender"> Female <input type="radio" name="myGender">

        <label for="car">Car</label>
        <select name="myCar" id="car">
            <option value="ind">Indica</option>
            <!-- default value is swift, because of selected keyword -->
            <option value="swf" selected>Swift</option> 
        </select>
    </form>

    <!-- id are identifiers, its unique -->
    <!-- class is used for making same properties, multiple tags can have same class -->

