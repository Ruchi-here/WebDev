        *{  /*The box-sizing property allows us to include the padding and border in an element's total width and height */
            box-sizing: border-box;
        }
        /* apply the property where the id is redelement */
        /* id selector */
        #redElement{
            color: purple;
            background-color: blue;
        }
        /* apply the property where the class is bgblue */
        /* class selector */
        .bgblue{
            color: aquamarine;
        }
        /* set of tag  that should have similar properties */
        /* (Grouping selector) */
        footer, span{
            background-color: pink;
            /* selecting color using rgb->more preferred as you can pick the color */
            color: rgb(183, 217, 47);
        }
        p{
            font-family: cursive;
            font-size: 23px;
            height: 100px;
            width: 245px;
            border: 4px solid green;
            /* border-width: 4px;
            border-color: green;
            border-style: solid; */
        }
        span{
            font-weight: bold;
        }

        .cointainer{
            background-color: burlywood;
            border: 3px solid rgb(145, 255, 0);
            /* We can set margin/padding for top, bottom, left and right like this */
            /* padding-top: 79px;
            padding-bottom: 79px;
            padding-left: 34px;
            padding-right: 79px; */

            /* margin-top: 3px;
            margin-bottom: 5px;
            margin-left: 34px;
            margin-right: 5px; */
            

            padding: 23px 56px 6px 78px; /* padding/margin : top right bottom left; */
             
            /* if you want x(top and bottom) to be same and y(left and right )to be same */
            padding: 34px 19px;
            width:666px;
            margin: 34px;
        }

        .item{
            border: 3px solid grey;
            margin: 12px 3px;
            padding: 12px 3px;
            background: red;
            /* margin auto is used to align to the center */
        }

        #fruits{
            float: left;
            width: 48%;
        }

        #computer{
            float: left;
            width: 48%;
        }

        #stationary{
            float: left;
            width: 100%;
